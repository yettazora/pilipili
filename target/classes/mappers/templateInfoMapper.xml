<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yetta.pilipili.dao.TemplateInfoMapper">

  <!--建立sql查询结果字段与实体属性的映射关系-->
  <resultMap id="TemplateInfoMap" type="com.yetta.pilipili.entity.TemplateInfo">
    <result column="id" jdbcType="INTEGER" property="id" />
    <result column="type" jdbcType="VARCHAR" property="type" />
    <result column="name" jdbcType="VARCHAR" property="name" />
  </resultMap>

  <!-- 根据类型查询已选的模板 -->
  <select id="selectByType" resultMap="TemplateInfoMap">
    SELECT
    *
    FROM
    template_info
    WHERE
    type = #{type}
  </select>

  <!-- 更新模板风格的配置 -->
  <update id="update">
    UPDATE template_info
    <set>
      <if test="name!=null and name!=''">name=#{name},</if>
    </set>
    WHERE type = #{type}
  </update>

  <!-- 获取类型对应的模板名称 -->
  <select id="selectNameByType" resultType="java.lang.String">
    SELECT
    name
    FROM
    template_info
    WHERE
    type = #{type}
  </select>
</mapper>